# =============================================================================
# QuranBot Environment Configuration Example
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env with real values to version control!

# Discord Bot Configuration
# ⚠️ SECURITY WARNING: Never commit real tokens to version control!
# Get your bot token from: https://discord.com/developers/applications
DISCORD_TOKEN=paste_your_bot_token_here_from_discord_developer_portal

# Discord Channel IDs (Enable Developer Mode in Discord to copy IDs)
# Right-click voice channel → Copy Channel ID
TARGET_CHANNEL_ID=your_voice_channel_id_18_digits
# Right-click text channel → Copy Channel ID  
PANEL_CHANNEL_ID=control_panel_channel_id_18_digits
LOGS_CHANNEL_ID=logs_channel_id_18_digits
DAILY_VERSE_CHANNEL_ID=daily_verses_channel_id_18_digits
# Right-click role → Copy Role ID
PANEL_ACCESS_ROLE_ID=panel_access_role_id_18_digits

# Admin User IDs (comma-separated if multiple)
# Right-click user → Copy User ID (requires Developer Mode)
ADMIN_USER_ID=your_user_id_18_digits

# Guild ID (Discord Server ID where the bot operates)
# Right-click server name → Copy Server ID
GUILD_ID=your_discord_server_id_18_digits

# Developer ID (your Discord user ID)
DEVELOPER_ID=your_developer_user_id_18_digits

# Audio Configuration
AUDIO_FOLDER=audio
DEFAULT_RECITER=Saad Al Ghamdi
AUDIO_QUALITY=128k
DEFAULT_SHUFFLE=false
DEFAULT_LOOP=false

# FFmpeg Configuration
# Linux/VPS: /usr/bin/ffmpeg
# macOS (Homebrew): /opt/homebrew/bin/ffmpeg
# Windows: C:/ffmpeg/bin/ffmpeg.exe
FFMPEG_PATH=/usr/bin/ffmpeg

# VPS Configuration (optional)
VPS_HOST=user@your-vps-ip

# Discord Logging Configuration
USE_WEBHOOK_LOGGING=true
# Create webhook: Channel Settings → Integrations → Webhooks → New Webhook
# ⚠️ SECURITY WARNING: Never commit real webhook URLs to version control!
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id_18_digits/your_webhook_token_68_chars
# Set to false to use bot-based logging (old method)
# Set to true to use webhook-based logging (recommended for better reliability)

# Security Configuration
RATE_LIMIT_PER_MINUTE=10

# Performance Configuration
CACHE_TTL=300
MAX_CONCURRENT_AUDIO=1
BACKUP_INTERVAL_HOURS=24

# Logging Configuration
LOG_LEVEL=INFO

# Environment (development/production)
ENVIRONMENT=production

# OpenAI API Configuration (for Islamic AI Assistant)
# Get your API key from: https://platform.openai.com/api-keys
# ⚠️ SECURITY WARNING: Never commit real API keys to version control!
OPENAI_API_KEY=sk-your_openai_api_key_starts_with_sk_51_chars_total
