{
  "info": {
    "name": "QuranBot API",
    "description": "Complete API collection for QuranBot - Professional Discord bot for Quranic recitation",
    "version": "4.0.1",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{DISCORD_BOT_TOKEN}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://api.quranbot.example.com",
      "type": "string"
    },
    {
      "key": "DISCORD_BOT_TOKEN",
      "value": "paste_your_bot_token_here",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Audio System",
      "item": [
        {
          "name": "Start Audio Playback",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"surah_number\": 1,\n  \"reciter\": \"Saad Al Ghamdi\",\n  \"resume_position\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/audio/play",
              "host": ["{{baseUrl}}"],
              "path": ["audio", "play"]
            }
          },
          "response": []
        },
        {
          "name": "Get Audio Status",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/audio/status",
              "host": ["{{baseUrl}}"],
              "path": ["audio", "status"]
            }
          },
          "response": []
        },
        {
          "name": "Stop Audio Playback",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/audio/stop",
              "host": ["{{baseUrl}}"],
              "path": ["audio", "stop"]
            }
          },
          "response": []
        },
        {
          "name": "Jump to Surah",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"surah_number\": 36\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/audio/jump",
              "host": ["{{baseUrl}}"],
              "path": ["audio", "jump"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Quiz System",
      "item": [
        {
          "name": "Start Quiz",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"category\": \"quran\",\n  \"difficulty\": \"intermediate\",\n  \"question_count\": 5\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/quiz/start",
              "host": ["{{baseUrl}}"],
              "path": ["quiz", "start"]
            }
          },
          "response": []
        },
        {
          "name": "Submit Quiz Answer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"session_id\": \"quiz_123456789\",\n  \"answer_index\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/quiz/answer",
              "host": ["{{baseUrl}}"],
              "path": ["quiz", "answer"]
            }
          },
          "response": []
        },
        {
          "name": "Get Quiz Leaderboard",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/quiz/leaderboard?limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["quiz", "leaderboard"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "AI Assistant",
      "item": [
        {
          "name": "Ask Islamic Question",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"question\": \"What are the five pillars of Islam?\",\n  \"language\": \"en\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/ai/ask",
              "host": ["{{baseUrl}}"],
              "path": ["ai", "ask"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Commands",
      "item": [
        {
          "name": "Get Random Verse",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/commands/verse",
              "host": ["{{baseUrl}}"],
              "path": ["commands", "verse"]
            }
          },
          "response": []
        },
        {
          "name": "Get Surah Info",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/commands/surah-info?surah_number=1",
              "host": ["{{baseUrl}}"],
              "path": ["commands", "surah-info"],
              "query": [
                {
                  "key": "surah_number",
                  "value": "1"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Analytics",
      "item": [
        {
          "name": "Get User Analytics",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/analytics/user/123456789",
              "host": ["{{baseUrl}}"],
              "path": ["analytics", "user", "123456789"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Get Bot Configuration",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/admin/config",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "config"]
            }
          },
          "response": []
        },
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}